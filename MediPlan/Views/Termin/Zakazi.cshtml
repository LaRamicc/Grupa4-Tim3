@{
    ViewData["Title"] = "Zakaži termin";
}

<!-- Uključi Flatpickr stil -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .zakazi-wrapper {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #fff;
    }

    .zakazi-wrapper h2 {
        text-align: center;
        color: #084c7e;
        margin-bottom: 25px;
    }

    label {
        font-weight: bold;
        color: #084c7e;
        margin-top: 15px;
        display: block;
    }

    select, input[type="text"] {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        width: 100%;
        padding: 12px;
        background-color: #084c7e;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
    }

    button:hover {
        background-color: #063b60;
    }
</style>

<div class="zakazi-wrapper">
    <h2>Zakažite termin</h2>

    @if (!ViewData.ModelState.IsValid)
    {
        <div style="color: red; font-weight: bold; margin-bottom: 15px;">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }

    <form method="post" asp-controller="Termin" asp-action="Zakazi">
        <label for="doktor">Odaberite doktora:</label>
        <select id="doktor" name="doktor">
            <option value="Doktor1">Doktor1</option>
            <option value="Doktor2">Doktor2</option>
            <option value="Doktor3">Doktor3</option>
        </select>

        <label for="datum">Odaberite termin:</label>
        <input type="text" id="datum" name="datum" placeholder="Odaberite datum..." required />

        <button type="submit">Zakaži termin</button>
    </form>
</div>

<!-- Uključi Flatpickr skriptu -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    flatpickr("#datum", {
        altInput: true,
        altFormat: "d.m.Y",
        dateFormat: "Y-m-d",
        minDate: "today"
    });
</script>
