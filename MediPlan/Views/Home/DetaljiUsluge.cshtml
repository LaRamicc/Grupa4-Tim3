@model MediPlan.Models.Usluga

@{
    ViewData["Title"] = Model.Naziv;
}

<style>
    .naslov-usluga {
        font-size: 2.2rem;
        font-weight: 700;
        color: #003366;
        text-align: center;
        margin-bottom: 30px;
    }

    .detalji-ikonica {
        max-height: 120px;
        display: block;
        margin-bottom: 20px;
    }

    .btn-nazad {
        background-color: #003366;
        color: white;
        border: none;
    }

        .btn-nazad:hover {
            background-color: #002244;
            color: white;
        }
</style>

<div class="container py-5">
    <h2 class="naslov-usluga">@Model.Naziv</h2>
    <div class="row align-items-center">
        <div class="col-md-4 text-center">
            <img src="~/@Model.Ikona" alt="@Model.Naziv" class="img-fluid detalji-ikonica" />
        </div>
        <div class="col-md-8">
            <p style="font-size:1.2rem;">@Model.Opis</p>
            <a href="@Url.Action("Usluge", "Home")" class="btn btn-nazad mt-3">Nazad na usluge</a>
        </div>
    </div>
</div>
